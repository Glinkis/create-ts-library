{
  "private": true,
  "name": "ts-lib-starter",
  "version": "0.0.0",
  "description": "A typescript library boilerplate.",
  "scripts": {
    "lint": "tslint .config/**/*.ts src/**/*.ts test/**/*.ts --fix",
    "start": "webpack-dev-server --config .config/dev.ts",
    "prebuild": "rimraf dist",
    "build:lib": "tsc --outDir dist/lib -d --declarationDir dist/types",
    "build:dev": "webpack --config .config/dev.ts",
    "build:prod": "webpack --config .config/prod.ts",
    "build:docs": "typedoc --out dist/docs --target es5 --theme minimal --mode file src",
    "build": "npm run build:lib & npm run build:dev & npm run build:prod & npm run build:docs",
    "test": "karma start --single-run",
    "test:watch": "karma start"
  },
  "pre-commit": "lint, test, build",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/karma": "^3.0.0",
    "@types/mocha": "^5.2.5",
    "@types/webpack": "^4.4.19",
    "chai": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "karma": "^2.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^2.0.13",
    "mocha": "^5.2.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
