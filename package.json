{
  "private": true,
  "name": "create-ts-library",
  "description": "A typescript library boilerplate.",
  "version": "0.0.0",
  "scripts": {
    "lint": "tslint {config,script,src,test}/**/*.ts --fix",
    "prebuild": "rimraf dist",
    "build:lib": "tsc -p tsconfig.lib.json",
    "build:bin": "tsc -p tsconfig.scripts.json",
    "build:docs": "typedoc --out dist/docs --target es5 --theme minimal --mode file src",
    "build": "npm run build:lib & npm run build:bin & npm run build:dev & npm run build:prod & npm run build:docs",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "pre-commit": "lint, test, build",
  "bin": {
    "create-ts-library": "./bin/index.js"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/jest": "^23.3.9",
    "@types/rimraf": "^2.0.2",
    "@types/webpack": "^4.4.19",
    "@types/webpack-merge": "^4.1.3",
    "chalk": "^2.4.1",
    "jest": "^23.6.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6",
    "webpack": "^4.26.0",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {}
}
