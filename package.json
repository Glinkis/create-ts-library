{
  "private": true,
  "name": "create-ts-library",
  "description": "A typescript library boilerplate.",
  "version": "0.0.0",
  "scripts": {
    "lint": "tslint {script,src,test}/**/*.ts --fix",
    "build": "tsc -p tsconfig.bin.json",
    "build:docs": "typedoc --out dist/docs --target es5 --theme minimal --mode file src"
  },
  "pre-commit": "lint, test, build",
  "engines": {
    "node": ">=8"
  },
  "files": [
    "bin",
    "jest.config.js",
    "tsconfig.json",
    "tsconfig.es.json",
    "tsconfig.lib.json",
    "tslint.json"
  ],
  "bin": {
    "create-ts-library": "./bin/index.js"
  },
  "dependencies": {
    "chalk": "2.4.1",
    "rimraf": "2.6.2",
    "tslib": "1.9.3",
    "typescript": "next"
  },
  "devDependencies": {
    "@types/chalk": "2.2.0",
    "@types/jest": "^23.3.10",
    "@types/rimraf": "2.0.2",
    "@types/webpack": "4.4.19",
    "@types/webpack-merge": "4.1.3",
    "jest": "23.6.0",
    "pre-commit": "1.2.2",
    "ts-jest": "23.10.5",
    "tslint": "5.11.0",
    "typedoc": "0.13.0",
    "webpack": "4.26.1",
    "webpack-dts-bundle": "0.0.2",
    "webpack-merge": "4.1.4"
  }
}
