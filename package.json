{
  "name": "create-ts-library",
  "description": "Simplifies the creation and distribution of typescript-based libraries.",
  "version": "1.0.0",
  "scripts": {
    "lint": "tslint {script,bin}/**/*.ts --fix",
    "check": "tsc -p tsconfig.bin.json",
    "check:watch": "tsc -p tsconfig.bin.json -w",
    "build:docs": "typedoc --out dist/docs --target es5 --theme minimal --mode file src"
  },
  "pre-commit": "lint, check",
  "engines": {
    "node": ">=8"
  },
  "files": [
    "bin",
    "lib",
    "jest.config.js",
    "tsconfig.json",
    "tsconfig.es.json",
    "tsconfig.lib.json",
    "tslint.json"
  ],
  "bin": {
    "create-ts-library": "./bin/index.js"
  },
  "dependencies": {
    "@types/jest": "23.3.10",
    "chalk": "2.4.1",
    "jest": "23.6.0",
    "rimraf": "2.6.2",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "tslib": "1.9.3",
    "tslint": "5.11.0",
    "typescript": "next",
    "webpack": "4.26.1",
    "webpack-dts-bundle": "0.0.2",
    "webpack-merge": "4.1.4"
  },
  "devDependencies": {
    "@types/chalk": "2.2.0",
    "@types/rimraf": "2.0.2",
    "@types/webpack": "4.4.19",
    "@types/webpack-merge": "4.1.3",
    "pre-commit": "1.2.2",
    "typedoc": "0.13.0"
  },
  "license": "MIT",
  "keywords": [
    "create",
    "typescript",
    "library",
    "bundler",
    "bundling"
  ]
}
