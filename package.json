{
  "private": true,
  "name": "ts-lib-starter",
  "version": "0.0.0",
  "description": "A typescript library boilerplate.",
  "scripts": {
    "lint": "tslint {config,src,test}/**/*.ts --fix",
    "start": "webpack-dev-server --config config/dev.ts",
    "prebuild": "rimraf dist",
    "build:lib": "tsc --outDir dist/lib -d --declarationDir dist/types -m es2015",
    "build:dev": "webpack --config config/dev.ts",
    "build:prod": "webpack --config config/prod.ts",
    "build:docs": "typedoc --out dist/docs --target es5 --theme minimal --mode file src",
    "build": "npm run build:lib & npm run build:dev & npm run build:prod & npm run build:docs",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "pre-commit": "lint, test, build",
  "devDependencies": {
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/jest": "^23.3.9",
    "@types/webpack": "^4.4.19",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
